    <style>
        .container {
            background-color: #EFF4FE;
            padding: 148px 220px 30px;

            gap: 40px;
        }

        .content1 {
            margin-bottom: 40px;
            background-color: white;
            padding: 65px 0 0;
            position: relative;
            border-radius: 20px;
            -moz-box-shadow: 0px 60px 100px -14px rgba(47, 100, 221, 0.17);
            -webkit-box-shadow: 0px 60px 100px -14px rgba(47, 100, 221, 0.17);
            box-shadow: 0px 60px 100px -14px rgba(47, 100, 221, 0.17);
            justify-content: center;
            align-items: center;
            gap: 30px;
        }

        .title {
            font-weight: 700;
            font-size: 40px;
            line-height: 110%;
            color: #24304F;
            margin: auto;
            padding-left: 65px;
            padding-right: 65px;
        }

        .dearText {
            font-weight: 400;
            font-size: 18px;
            line-height: 160%;
            color: #566488;
            padding-left: 65px;
            padding-right: 65px;
        }

        .loginButton {
            max-width: 231px;
            cursor: pointer;
            width: 100%;
            height: 54px;
            background: #4E7FF1;
            box-shadow: 0px 10px 40px rgba(78, 127, 241, 0.27);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: row;

        }
        .transferBlock{
            position: relative;
            z-index: 5;
            padding: 0px 65px 0;
        }
        .transfer {
            background: linear-gradient(168.25deg, #E2EAFF 10.82%, #FFFFFF 87.91%);

            border-radius: 15px 15px 0px 0px;
            padding: 0 30px;
            margin: auto;
        }

        .transferTitle {
            font-weight: 700;
            font-size: 24px;
            line-height: 160%;
            color: #24304F;
            padding-top: 30px;
            margin-bottom: 22px;
        }

        .transferDetails {
            margin-bottom: 10px;
            margin-top: 20px;
        }

        .detailItem {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }
        .detailItem img {
            width: 20px;
            height: 20px;
            margin: auto;
        }
        .detailItem p {
            font-size: 18px;
            line-height: 160%;
            width: 100%;
        }

        #price {
            color: #566488;
            text-align: left;
            width: max-content;
            white-space: nowrap;
            margin-top: 40px
        }
        #cost{
            font-size: 30px;
        }
        .footerText {
            font-size: 14px;
            line-height: 160%;
            text-align: center;
            color: #8B96B5;
            margin: 30px auto auto;
        }

        @media screen and (max-width: 600px) {
            .container {
                padding-right: 38px !important;
                padding-left: 38px !important;
                padding-top: 20px !important;
            }

            .content1{
                padding-top: 25px;
            }

            .title {
                width: 260px;
                font-size: 26px;
                text-align: left;
                padding-left: 20px;
                padding-right: 20px;
            }

            #cost{
                font-size: 20px;
            }
            .transfer {
                padding: 0 20px;
            }
            .transferTitle {
                font-size: 20px;
            }
            .dearText {
                font-size: 14px;
                text-align: left;
                padding-left: 20px;
                padding-right: 20px;
            }
            .transferBlock {
                padding: 0px 20px;
            }

            .loginButton {
                margin: unset;
                max-width: 100%;
            }
            .detailItem p {
                font-size: 14px;
                line-height: 160%;
                width: 100% !important;
            }
            .detailItem img{
                display: none;
            }
            #price {
                margin:auto;
            }
            #cost{
                font-size: 20px !important;
            }
            .footerText {
                font-size: 14px;
                line-height: 160%;
                text-align: center;
                color: #8B96B5;
                margin: 30px auto auto;
            }
        }


    </style>
</head>
